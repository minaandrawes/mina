CREATE PROCEDURE EnableFirstInLastOut
    @Enable BIT
AS
BEGIN
    IF @Enable = 1
        PRINT 'First In/Last Out attendance processing enabled';
    ELSE
        PRINT 'First In/Last Out attendance processing disabled';
END;
GO

